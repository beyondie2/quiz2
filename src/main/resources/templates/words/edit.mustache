{{>layouts/header}}

{{#word}}
<form class="container" action="/words/update" method="post">
    <input name="id" type="hidden" value="{{id}}">
    <div class="mb-3">
        <label class="form-label">단어(한국어)</label>
    </div>        <input type="text" class="form-control" name="kWord" value="{{kWord}}">

    <div class="mb-3">
        <label class="form-label">단어(영어)</label>
        <textarea class="form-control" rows="3" name="eWord">{{eWord}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">제출하기</button>
    <a href="/words/{{id}}">돌아가기</a>
</form>
{{/word}}

{{>layouts/footer}}